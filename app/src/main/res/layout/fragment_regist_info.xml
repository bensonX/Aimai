<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/am_bk"
    tools:context=".ui.activity.ModifyPswActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View style="@style/Line_H" />

            <LinearLayout
                android:id="@+id/lay_regist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="姓名"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <com.ins.common.view.EmojiEditText
                        android:id="@+id/edit_regist_name"
                        style="@style/EditMeItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="请输入姓名"
                        android:inputType="textPersonName"
                        android:maxLength="32"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_cardnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="身份证号"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <com.ins.common.view.EmojiEditText
                        android:id="@+id/edit_regist_cardnum"
                        style="@style/EditMeItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:digits="0123456789Xx"
                        android:hint="请输入身份证号"
                        android:inputType="textPersonName"
                        android:maxLength="18"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_compname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="企业名称"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <com.ins.common.view.EmojiEditText
                        android:id="@+id/edit_regist_compname"
                        style="@style/EditMeItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="请输入企业名称"
                        android:inputType="textPersonName"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_compnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="营业执照编码"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <com.ins.common.view.EmojiEditText
                        android:id="@+id/edit_regist_compnum"
                        style="@style/EditMeItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:hint="请输入营业执照编码"
                        android:inputType="text"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="行业"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <TextView
                        android:id="@+id/text_regist_business"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:drawableRight="@drawable/ic_me_next"
                        android:ellipsize="end"
                        android:hint="请选择行业"
                        android:maxLines="1"
                        android:text=""
                        android:textColor="@color/com_text_blank_deep_light"
                        android:textColorHint="@color/com_text_dark"
                        android:textSize="@dimen/text_nomal" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_govname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="机构名称"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <com.ins.common.view.EmojiEditText
                        android:id="@+id/edit_regist_govname"
                        style="@style/EditMeItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:hint="请输入机构名称"
                        android:inputType="textPersonName"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_govnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="机构代码"
                        android:textColor="@color/com_text_blank"
                        android:textSize="@dimen/text_nomal" />

                    <com.ins.common.view.EmojiEditText
                        android:id="@+id/edit_regist_govnum"
                        style="@style/EditMeItem"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:digits="0123456789qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
                        android:hint="请输入机构代码"
                        android:inputType="text"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    style="@style/Line_H"
                    android:layout_marginLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="所在地"
                    android:textColor="@color/com_text_blank"
                    android:textSize="@dimen/text_nomal" />

                <TextView
                    android:id="@+id/text_regist_address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_me_next"
                    android:ellipsize="end"
                    android:hint="请选择您的所在地"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="@color/com_text_blank_deep_light"
                    android:textColorHint="@color/com_text_dark"
                    android:textSize="@dimen/text_nomal" />

            </LinearLayout>


            <View style="@style/Line_H" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View style="@style/Line_H" />

            <LinearLayout
                android:id="@+id/lay_regist_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="人像采集"
                    android:textColor="@color/com_text_blank"
                    android:textSize="@dimen/text_nomal" />

                <ImageView
                    android:id="@+id/img_regist_header"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_me_camera" />

                <Space style="@style/Space_H" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_me_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_yyzz"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="上传营业执照"
                    android:textColor="@color/com_text_blank"
                    android:textSize="@dimen/text_nomal" />

                <ImageView
                    android:id="@+id/img_regist_yyzz"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_me_add" />

                <Space style="@style/Space_H" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_me_next" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_regist_jsx"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:scaleType="centerCrop"
                    android:text="上传单位介绍信"
                    android:textColor="@color/com_text_blank"
                    android:textSize="@dimen/text_nomal" />

                <ImageView
                    android:id="@+id/img_regist_jsx"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_me_add" />

                <Space style="@style/Space_H" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_me_next" />

            </LinearLayout>

            <View style="@style/Line_H" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="实名采集用于您观看视频时进行头像验证，所以必须采集。"
            android:textColor="@color/com_text_dark"
            android:textSize="@dimen/text_nomal_small" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            app:cardBackgroundColor="@color/am_blue"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/btn_go"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="提交个人资料"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big" />

        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>