<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_compdetail_pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bk" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="安全生产管理培训课"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_nomal_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="17dp"
            android:layout_marginTop="7dp"
            android:drawableLeft="@drawable/ic_lesson_tv"
            android:drawablePadding="7dp"
            android:gravity="bottom"
            android:text="12个视频课程"
            android:textColor="@color/com_text_dark_light"
            android:textSize="@dimen/text_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_video_start"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:text="5位观看"
            android:textColor="@color/com_text_dark_light"
            android:textSize="@dimen/text_small" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_learn_user"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:text="2位安全人员"
            android:textColor="@color/com_text_dark_light"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

</LinearLayout>
