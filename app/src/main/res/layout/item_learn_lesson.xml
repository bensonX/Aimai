<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/shape_rect_cornerbig_white"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="120dp"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_item_study_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/default_bk" />

        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/img_learn_study_flag_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_learn_flag_top_pass"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_item_study_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="安全生产管理培训课"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_big" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_item_study_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="700习题 36个视频课 5个讲义"
            android:textColor="@color/com_text_dark_light"
            android:textSize="@dimen/text_small" />

        <ProgressBar
            android:id="@+id/progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginTop="15dp"
            android:max="100"
            android:progress="40"
            android:progressDrawable="@drawable/progress_drawable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_item_study_learntime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_learn_check_small_hot"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:text="已学习0小时"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/text_item_study_totaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_learn_add"
                android:drawablePadding="3dp"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                android:text="共0小时"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
