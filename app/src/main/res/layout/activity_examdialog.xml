<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/shape_rect_corner_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_examdialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:text="您的答题时间已到！"
            android:textColor="@color/com_text_blank_deep_light"
            android:textSize="@dimen/text_big" />


        <TextView
            android:id="@+id/text_examdialog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="5"
            android:textColor="@color/am_blue"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/text_examdialog_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:lineSpacingExtra="5dp"
            android:paddingLeft="27dp"
            android:paddingRight="27dp"
            android:text="5秒之后我们将自动为您提交答案"
            android:textColor="@color/com_text_blank_deep_light"
            android:textSize="@dimen/text_nomal" />


        <android.support.v7.widget.CardView
            app:cardBackgroundColor="@color/am_blue"
            app:cardCornerRadius="5dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp">

            <TextView
                android:id="@+id/btn_go"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="提交并查看"
                android:textColor="@color/white"
                android:textSize="@dimen/text_big_nomal" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</FrameLayout>