<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_lesson_cate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/default_bk" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="7dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_lesson_cate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:text="安全生产管理培训课"
            android:textColor="@color/com_text_blank_deep_light"
            android:textSize="@dimen/text_nomal" />

        <TextView
            android:id="@+id/text_lesson_cate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:drawableLeft="@drawable/ic_lesson_tv"
            android:drawablePadding="7dp"
            android:gravity="center"
            android:text="12个视频课程"
            android:textColor="@color/com_text_light"
            android:textSize="@dimen/text_nomal_small" />

        <Space style="@style/Space_V" />

        <TextView
            android:id="@+id/text_lesson_cate_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="￥185.0"
            android:textColor="@color/sb_red"
            android:textSize="@dimen/text_nomal" />


    </LinearLayout>

</LinearLayout>