<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center"
    android:orientation="vertical">

    <View style="@style/Line_H" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_lessoncate_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="安全防范类"
            android:textColor="@color/com_text_blank"
            android:textSize="@dimen/text_big_nomal" />

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:drawablePadding="4dp"
            android:drawableRight="@drawable/ic_more"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="查看全部"
            android:textColor="@color/com_text_dark"
            android:textSize="@dimen/text_small" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">

        <LinearLayout
            android:id="@+id/lay_lesson_cate1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/img_lesson_cate1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_bk" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text_lesson_cate_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:text="安全生产管理培训课"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/text_lesson_cate_count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:drawableLeft="@drawable/ic_lesson_tv"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:text="12个视频课程"
                android:textColor="@color/com_text_light"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/text_lesson_cate_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:text="￥185.0"
                android:textColor="@color/sb_red"
                android:textSize="@dimen/text_big" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_lesson_cate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:foreground="?attr/selectableItemBackground"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/img_lession_cate2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_bk" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/text_lesson_cate_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:lineSpacingExtra="5dp"
                android:maxLines="2"
                android:text="安全生产管理培训课"
                android:textColor="@color/com_text_blank"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/text_lesson_cate_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:drawableLeft="@drawable/ic_lesson_tv"
                android:drawablePadding="7dp"
                android:gravity="center"
                android:text="12个视频课程"
                android:textColor="@color/com_text_light"
                android:textSize="@dimen/text_nomal_small" />

            <TextView
                android:id="@+id/text_lesson_cate_price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="7dp"
                android:text="￥185.0"
                android:textColor="@color/sb_red"
                android:textSize="@dimen/text_big" />

        </LinearLayout>


    </LinearLayout>

    <View style="@style/Line_H" />

</LinearLayout>

