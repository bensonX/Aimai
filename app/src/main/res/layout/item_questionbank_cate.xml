<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@color/white"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_questionbank_cate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安全生产管理培训课A"
                android:textColor="@color/com_text_blank_deep_light"
                android:textSize="@dimen/text_big_nomal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_questionbank_cate_count_video"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:drawableLeft="@drawable/ic_lesson_tv"
                android:drawablePadding="5dp"
                android:gravity="bottom"
                android:paddingRight="3dp"
                android:text="0 个视频课"
                android:textColor="@color/com_text_dark"
                android:textSize="@dimen/text_nomal_small" />


            <TextView
                android:id="@+id/text_questionbank_cate_count_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="错误 0 题"
                android:textColor="@color/com_text_dark"
                android:textSize="@dimen/text_nomal_small" />


        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_me_next" />
</LinearLayout>