<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/am_bk"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.activity.ModifyPswActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View style="@style/Line_H" />

        <com.ins.common.view.EmojiEditText
            android:id="@+id/edit_vali_phone"
            style="@style/EditMeItem"
            android:hint="输入您的手机号"
            android:maxLength="11"
            android:inputType="number" />

        <View
            style="@style/Line_H"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.ins.common.view.EmojiEditText
                android:id="@+id/edit_vali_code"
                style="@style/EditMeItem"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:hint="输入验证码"
                android:maxLength="4"
                android:inputType="number" />

            <TextView
                android:id="@+id/btn_vali"
                android:layout_width="100dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:background="@drawable/shape_rect_corner_dark"
                android:foreground="?attr/selectableItemBackground"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="6dp"
                android:text="获取验证码"
                android:textColor="@color/white" />

        </LinearLayout>

        <View style="@style/Line_H" />

    </LinearLayout>


</LinearLayout>
